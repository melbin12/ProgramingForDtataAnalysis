# app.py
%%writefile app.py
import streamlit as st
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns
from sklearn.ensemble import RandomForestRegressor
from sklearn.preprocessing import StandardScaler

# ==========================
# ðŸ’„ Custom CSS Styling
# ==========================
def load_custom_css():
    st.markdown("""
        <style>
            .main { background-color: #f8f9fa; }
            h1, h2, h3 { color: #2c3e50; }
            .stButton>button { background-color: #4CAF50; color: white; font-weight: bold; }
            .stSlider > div > div > div { background: #4CAF50; }
        </style>
    """, unsafe_allow_html=True)

# ==========================
# ðŸ“¦ Load Dataset
# ==========================
@st.cache_data
def load_data():
    df = pd.read_csv("merged_beijing_data.csv", parse_dates=True)
    return df

# ==========================
# ðŸ“Š Sidebar Navigation
# ==========================
def sidebar():
    st.sidebar.title("ðŸŒ«ï¸ CMP7005 PM2.5 Prediction")
    return st.sidebar.radio("Navigate to âž¤", ["ðŸ“„ Overview", "ðŸ“Š EDA", "ðŸ“ˆ Prediction"])

# ==========================
# ðŸ“„ Overview Page
# ==========================
def show_overview(df):
    st.title("ðŸ“„ Dataset Overview")
    st.markdown("This app visualizes air quality and weather data from Beijing (2013â€“2017).")

    st.subheader("ðŸ§¾ Sample Data")
    st.dataframe(df.head(), use_container_width=True)

    st.subheader("ðŸ“ Dataset Shape")
    st.info(f"âœ… **{df.shape[0]}** Rows & **{df.shape[1]}** Columns")

    st.subheader("â— Missing Values")
    missing = df.isnull().sum()
    st.bar_chart(missing[missing > 0])

# ==========================
# ðŸ“Š EDA Page
# ==========================
def show_eda(df):
    st.title("ðŸ“Š Exploratory Data Analysis")

    st.markdown("Toggle the checkboxes to explore the data:")

    if st.checkbox("ðŸ“Œ PM2.5 Distribution Histogram"):
        fig, ax = plt.subplots()
        sns.histplot(df["PM2.5"].dropna(), bins=50, color="salmon", edgecolor='black', ax=ax)
        ax.set_title("Distribution of PM2.5", fontsize=13)
        st.pyplot(fig)

    if st.checkbox("ðŸ§  Correlation Heatmap"):
        fig, ax = plt.subplots(figsize=(10, 6))
        corr = df[['PM2.5', 'PM10', 'SO2', 'NO2', 'CO', 'O3']].corr()
        sns.heatmap(corr, annot=True, cmap="coolwarm", ax=ax, linewidths=0.5)
        ax.set_title("Pollutants Correlation", fontsize=13)
        st.pyplot(fig)

    if st.checkbox("ðŸ“… Monthly PM2.5 Trend"):
        df["date"] = pd.to_datetime(df.index, errors='coerce')
        df = df.set_index("date")
        fig, ax = plt.subplots(figsize=(10, 4))
        df["PM2.5"].resample('M').mean().plot(ax=ax, color="purple")
        ax.set_title("Monthly Average PM2.5", fontsize=13)
        ax.set_ylabel("PM2.5 (Âµg/mÂ³)")
        st.pyplot(fig)

# ==========================
# ðŸ“ˆ Prediction Page
# ==========================
def show_prediction(df):
    st.title("ðŸ“ˆ Predict PM2.5 Level")
    st.markdown("Adjust the sliders to simulate conditions:")

    features = {
        "PM10": st.slider("PM10 (Âµg/mÂ³)", 0.0, 500.0, 100.0),
        "SO2": st.slider("SO2 (Âµg/mÂ³)", 0.0, 100.0, 20.0),
        "NO2": st.slider("NO2 (Âµg/mÂ³)", 0.0, 200.0, 60.0),
        "CO": st.slider("CO (mg/mÂ³)", 0.0, 10.0, 1.0),
        "O3": st.slider("O3 (Âµg/mÂ³)", 0.0, 300.0, 80.0),
        "TEMP": st.slider("Temperature (Â°C)", -20.0, 50.0, 20.0),
        "PRES": st.slider("Pressure (hPa)", 990.0, 1100.0, 1012.0),
        "DEWP": st.slider("Dew Point (Â°C)", -30.0, 30.0, 5.0),
        "WSPM": st.slider("Wind Speed (m/s)", 0.0, 20.0, 2.5),
    }

    if st.button("ðŸš€ Predict PM2.5"):
        input_df = pd.DataFrame([features])

        # Train model
        X = df[list(features.keys())]
        y = df['PM2.5']
        scaler = StandardScaler()
        X_scaled = scaler.fit_transform(X)
        model = RandomForestRegressor(n_estimators=100, random_state=42)
        model.fit(X_scaled, y)

        prediction = model.predict(scaler.transform(input_df))

        st.success(f"âœ… Predicted PM2.5 Level: **{prediction[0]:.2f} Âµg/mÂ³**")
# ==========================
# ðŸš€ Main App
# ==========================
def main():
    load_custom_css()
    df = load_data()
    page = sidebar()

    if page == "ðŸ“„ Overview":
        show_overview(df)
    elif page == "ðŸ“Š EDA":
        show_eda(df)
    elif page == "ðŸ“ˆ Prediction":
        show_prediction(df)

if __name__ == "__main__":
    main()
